<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.github.lanalebedeva.mydiscord.messages.ui.viewlayoutview.MessageWithReaction">

    <ImageView
        android:id="@+id/image"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_margin="6dp"
        android:contentDescription="@string/avatar"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name name"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/name_in_message" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message from Name Name"
        android:textColor="@color/text_color_message"
        android:textSize="@dimen/message" />

    <com.github.lanalebedeva.mydiscord.messages.ui.viewlayoutview.FlexBoxLayout
        android:id="@+id/view_flexbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/emoji"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp" />
</merge>