<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/user_item_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/avatar"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_item_tv_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/text_color_message"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/user_item_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_item_tv_email"/>

    <TextView
        android:id="@+id/user_item_tv_email"
        android:textColor="@color/text_color_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/user_item_avatar"
        app:layout_constraintTop_toBottomOf="@id/user_item_tv_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>