<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_view">

    <TextView
        android:id="@+id/topic_item_child"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="22sp"
        android:paddingLeft="41dp"
        android:textColor="@color/text_color_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/topic_item_child_mes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topic_item_child_mes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="25dp"
        android:textColor="@color/text_color_message"
        android:text=" mes"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/topic_item_child"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>